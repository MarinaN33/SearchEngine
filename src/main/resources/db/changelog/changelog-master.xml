<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <include file="db/changelog/init-tables.xml"/>

    <changeSet id="modify-page-path-type" author="Marina">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="page" columnName="path"/>
            </not>
        </preConditions>
        <modifyDataType tableName="page" columnName="path" newDataType="TEXT"/>
    </changeSet>

    <changeSet id="create-idx-page-path" author="Marina">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="idx_page_path" tableName="page"/>
            </not>
        </preConditions>
        <createIndex indexName="idx_page_path" tableName="page">
            <column name="path"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

