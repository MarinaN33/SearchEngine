<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ========================================= -->
    <!-- 1. Таблица sites                         -->
    <!-- ========================================= -->
    <changeSet id="init-1" author="rik">
        <createTable tableName="site">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="last_error" type="TEXT"/>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ========================================= -->
    <!-- 2. Таблица page                          -->
    <!-- ========================================= -->
    <changeSet id="init-2" author="rik">
        <createTable tableName="page">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_page_site"
                             referencedTableName="site" referencedColumnNames="id"/>
            </column>
            <column name="path" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="MEDIUMTEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="page" indexName="idx_page_path">
            <column name="path" type="varchar(255)"/>
        </createIndex>
    </changeSet>

    <!-- ========================================= -->
    <!-- 3. Таблица lemma                         -->
    <!-- ========================================= -->
    <changeSet id="init-3" author="rik">
        <createTable tableName="lemma">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_lemma_site"
                             referencedTableName="site" referencedColumnNames="id"/>
            </column>
            <column name="lemma" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="frequency" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="lemma" indexName="idx_lemma_site_lemma">
            <column name="site_id"/>
            <column name="lemma"/>
        </createIndex>
    </changeSet>

    <!-- ========================================= -->
    <!-- 4. Таблица search_index                  -->
    <!-- ========================================= -->
    <changeSet id="init-4" author="rik">
        <createTable tableName="search_index">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="page_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_index_page"
                             referencedTableName="page" referencedColumnNames="id"/>
            </column>
            <column name="lemma_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_index_lemma"
                             referencedTableName="lemma" referencedColumnNames="id"/>
            </column>
            <column name="rank" type="FLOAT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="search_index" indexName="idx_index_lemma_page">
            <column name="lemma_id"/>
            <column name="page_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
